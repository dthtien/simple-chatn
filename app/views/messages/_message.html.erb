<div class="row">  
  <div class="col s12 l12">
    <div class="message <%= current_user.author?(message) ? 'left' : 'right' %>">
      <%= link_to "#{message.sender.try(:name)}: ", "#",
      class: "#{ current_user.author?(message) ? 'left' : 'right'}" %> 
      <span class="chip">
        <%= message.content %>
      </span>
    </div>
  </div>
</div>